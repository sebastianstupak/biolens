{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BioLens": "Information"
    }
  },
  
  "AllowedHosts": "*",
  
  "DataSources": {
    "UniProt": {
      "BaseUrl": "https://rest.uniprot.org",
      "TimeoutSeconds": 30,
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000,
      "UserAgent": "BioLens/1.0"
    }
  },
  
  "Cache": {
    "Provider": "InMemory",
    "DefaultExpirationMinutes": 60,
    "MaxSizeMegabytes": 100
  }
}